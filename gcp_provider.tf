# ---------------------------------------------------------------------------------------------------------------------
# Foundation Layer
# GCP Provider
# ---------------------------------------------------------------------------------------------------------------------
provider "google" {
  region      = "us-west1"
  version     = "~> 2.18.1"
}

provider "google-beta" {
  version     = "~> 2.18.1"
}

provider "null" {
  version = "~> 2.1"
}

provider "random" {
  version = "~> 2.2"
}

# ---------------------------------------------------------------------------------------------------------------------
# Foundation Layer
# GCS Backend for Terraform State
# ---------------------------------------------------------------------------------------------------------------------
terraform {
  backend "gcs" {
    bucket  = "iq9-tf-bootstrap"
    prefix  = "terraform/state"
  }
}
